{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Adaptive Routine",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "kind": { "type": "string" },
    "enabled": { "type": "boolean" },
    "schedule": {
      "type": "object",
      "properties": {
        "days": { "type": "array", "items": { "type": "integer", "minimum": 0, "maximum": 6 } },
        "start": { "type": "string", "pattern": "^\\d{2}:\\d{2}$" },
        "end": { "type": "string", "pattern": "^\\d{2}:\\d{2}$" }
      },
      "required": ["days", "start", "end"],
      "additionalProperties": true
    },
    "actions": {
      "type": "object",
      "additionalProperties": true
    },
    "learning": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "exploration_rate": { "type": "number", "minimum": 0, "maximum": 1 },
        "mutation": {
          "type": "object",
          "properties": {
            "fields": { "type": "array", "items": { "type": "string" } },
            "bounds": { "type": "object", "additionalProperties": true },
            "step_pct": { "type": "number", "minimum": 0, "maximum": 1 }
          },
          "required": ["fields"],
          "additionalProperties": true
        }
      },
      "required": ["enabled"],
      "additionalProperties": true
    },
    "plant_id": { "type": ["string", "null"] }
  },
  "required": ["name", "kind", "schedule"],
  "additionalProperties": true
}

